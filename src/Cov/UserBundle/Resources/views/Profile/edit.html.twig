{% extends "@FOSUser/test.html.twig" %}

{% block title %} {{ parent() }} - EditProfile {% endblock title %}

{% block fos_user_img %}
    <form  action="{{  path('fos_user_profile_edit')}}">


    <label for="file-input">
        {% if user.photo != null %}
            &nbsp; &nbsp;&nbsp;  &nbsp; &nbsp;&nbsp;<img src=" {{ asset( user.photo) }}">
        {% elseif user.sexe == "h" %}
        &nbsp; &nbsp;&nbsp;  &nbsp; &nbsp;&nbsp; <img src=" {{ asset('bundles/covuser/img/a.png') }}">
            <strong><h3 style="color: #245580">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    Upload a photo</h3></strong>
        {% elseif user.sexe == 'f' %}
            &nbsp; &nbsp;&nbsp;  &nbsp; &nbsp;&nbsp; <img src=" {{ asset('bundles/covuser/img/female.jpg') }}">

        {% endif %}


    </label>


    <input value="Upload" type="file"  name="fos_user_profile_form[photo]"  id="file-input" style="display: none">
{% endblock fos_user_img %}

{% block fos_user_content %}

{% include "@FOSUser/Profile/edit_content.html.twig" %}
{% endblock fos_user_content %}
